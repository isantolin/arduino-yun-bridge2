#!/bin/sh /etc/rc.common
# McuBridge Daemon Init Script - Production Ready (OpenWrt 25.12)

START=99
STOP=10
USE_PROCD=1

# Dependencias críticas de red y broker local
DEPENDS="mosquitto network"

start_service() {
    local spool_dir="/tmp/mcubridge/spool"
    local file_root="/tmp/yun_files"
    local watchdog_enabled="1"
    local watchdog_interval="5"
    local allow_non_tmp_paths="0"
    local respawn_threshold="3600"
    local respawn_timeout="5"
    local respawn_retry="0"

    if command -v uci >/dev/null 2>&1; then
        spool_dir="$(uci -q get mcubridge.general.mqtt_spool_dir || echo "$spool_dir")"
        file_root="$(uci -q get mcubridge.general.file_system_root || echo "$file_root")"
        watchdog_enabled="$(uci -q get mcubridge.general.watchdog_enabled || echo "$watchdog_enabled")"
        watchdog_interval="$(uci -q get mcubridge.general.watchdog_interval || echo "$watchdog_interval")"
        allow_non_tmp_paths="$(uci -q get mcubridge.general.allow_non_tmp_paths || echo "$allow_non_tmp_paths")"
        respawn_threshold="$(uci -q get mcubridge.general.respawn_threshold || echo "$respawn_threshold")"
        respawn_timeout="$(uci -q get mcubridge.general.respawn_timeout || echo "$respawn_timeout")"
        respawn_retry="$(uci -q get mcubridge.general.respawn_retry || echo "$respawn_retry")"
    fi

    case "${allow_non_tmp_paths}" in
        1|true|yes|on|enable|enabled)
            ;;
        *)
            case "$spool_dir" in
                /tmp|/tmp/*) ;;
                *) spool_dir="/tmp/mcubridge/spool" ;;
            esac

            case "$file_root" in
                /tmp|/tmp/*) ;;
                *) file_root="/tmp/yun_files" ;;
            esac
            ;;
    esac

    # [FLASH PROTECTION - CRITICAL]
    # Crear directorios de trabajo en RAM (/tmp es tmpfs en OpenWrt)
    # Evita desgaste de la memoria Flash por escrituras frecuentes (spool/sockets)
    mkdir -p "$spool_dir"
    mkdir -p /tmp/run/mcubridge
    mkdir -p "$file_root"
    
    # Asegurar permisos correctos (777 permite acceso a tools de usuario si es necesario)
    chmod 777 "$spool_dir"
    chmod 777 /tmp/run/mcubridge
    chmod 755 "$file_root"

    procd_open_instance

    # Arrancar vía wrapper (/usr/bin/mcubridge) para asegurar PYTHONPATH y flags
    # consistentes con el layout del paquete (/usr/libexec/mcubridge).
    procd_set_param command /usr/bin/mcubridge

    # [RESILIENCIA]
    # Reinicio infinito con backoff de 5s si falla
    # Si falla repetidamente antes de 3600s, se considera inestable
    procd_set_param respawn "$respawn_threshold" "$respawn_timeout" "$respawn_retry"

    # [WATCHDOG]
    # Integración con el watchdog del kernel vía procd (controlado por UCI)
    case "${watchdog_enabled}" in
        1|true|yes|on)
            local watchdog_ms
            watchdog_ms="$(awk -v s="${watchdog_interval}" 'BEGIN { if (s+0 <= 0) s=5; printf "%d", (s*2000) }')"
            procd_set_param watchdog "$watchdog_ms"
            ;;
    esac

    # Redirigir logs a syslog (logread)
    procd_set_param stdout 1
    procd_set_param stderr 1

    procd_close_instance
}