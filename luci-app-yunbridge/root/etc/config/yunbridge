config general 'general'
    option enabled '1'
    
    # [PRODUCCION] Debug desactivado
    option debug '0'

    # [SERIAL] Experimental 250000 baud (matches U-Boot)
    option serial_port '/dev/ttyATH0'
    option serial_baud '250000'
    
    # [SEGURIDAD] Secreto compartido (se genera automáticamente en primer boot)

    # [MQTT] Configuración del broker local
    option mqtt_host '127.0.0.1'
    option mqtt_port '8883'
    option mqtt_tls '1'
    option mqtt_tls_insecure '0'
    option mqtt_cafile '/etc/ssl/certs/ca-certificates.crt'
    option mqtt_topic 'br'

    # [FLASH GUARD] Mantenemos esta mejora CRÍTICA (RAMFS)
    option mqtt_spool_dir '/tmp/yunbridge/spool'

    # [ALMACENAMIENTO]
    # Default to tmpfs to avoid Flash wear unless an external mount is configured.
    option file_system_root '/tmp/yun_files'

    # [TIMEOUTS]
    option process_timeout '15'
