config general 'general'
    option enabled '1'
    
    # [PRODUCCION] Debug desactivado
    option debug '1'

    # [SERIAL] Velocidad estándar (Legacy Compatibility)
    option serial_port '/dev/ttyACM0'
    option serial_baud '115200'
    # [SERIAL] Fallback baudrate for recovery mode
    option serial_safe_baud '115200'
    
    # [SEGURIDAD] Secreto compartido (se genera automáticamente en primer boot)
    option serial_shared_secret '755142925659b6f5d3ab00b7b280d72fc1cc17f0dad9f52fff9f65efd8caf8e3'

    # [MQTT] Configuración del broker local
    option mqtt_host '127.0.0.1'
    option mqtt_port '8883'
    option mqtt_tls '1'
    option mqtt_tls_insecure '1'
    option mqtt_cafile '/etc/ssl/certs/ca-certificates.crt'
    option mqtt_topic 'br'

    # [FLASH GUARD] Mantenemos esta mejora CRÍTICA (RAMFS)
    option mqtt_spool_dir '/tmp/mcubridge/spool'

    # [ALMACENAMIENTO]
    # Default to tmpfs to avoid Flash wear unless an external mount is configured.
    option file_system_root '/tmp/yun_files'

    # [TIMEOUTS]
    option process_timeout '15'
    
    # [PROCESS] Límites de procesos concurrentes
    option process_max_concurrent '4'
    option process_max_output_bytes '65536'

    # [WATCHDOG] Configuración del hardware watchdog
    option watchdog_enabled '0'
    option watchdog_interval '10.0'

    # [METRICS] Prometheus metrics exporter (disabled by default)
    option metrics_enabled '0'
    option metrics_host '127.0.0.1'
    option metrics_port '9130'
